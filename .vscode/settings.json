{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "javascript.format.enable": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "vim.useSystemClipboard": true, // OS のクリップボードと同期
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.hlsearch": true
}